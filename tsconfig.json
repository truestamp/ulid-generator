{
  "compilerOptions": {
    "outDir": "tscOutDir",
    "target": "esnext",
    "lib": ["esnext"],
    "alwaysStrict": true,
    "strict": true,
    "noEmitOnError": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "types": [
      "@cloudflare/workers-types",
      "jest",
      "@types/service-worker-mock",
      "@types/node"
    ]
  },
  "include": ["src"],
  "exclude": ["node_modules", "tests"]
}
